<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ferreteriatuerka.controller.ProductoController"
      stylesheets="@Styles/login.css">
    <GridPane styleClass="content"
              hgap="10" vgap="10" alignment="CENTER">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="DescripciÃ³n:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Precio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtStock" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Nombre de la Categoria:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbCategoria" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Nombre del Proveedor:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtProveedorNombre" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Imagen:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="txtImagen" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
            <Button text="Cargar" onAction="#cargarProductos"/>
            <Button text="Guardar" onAction="#guardarProducto"/>
            <Button text="Eliminar" onAction="#eliminarProducto" disable="true"/>
            <Button text="Volver" onAction="#VolverMenu"/>
        </HBox>
        <TableView fx:id="tblProductos" prefHeight="260" prefWidth="520"
                   GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120"/>
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="90"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="70"/>
                <TableColumn fx:id="colCategoria" text="Cat" prefWidth="60"/>
                <TableColumn fx:id="colProveedor" text="Prov" prefWidth="60"/>
                <TableColumn fx:id="colImg" text="Img" prefWidth="90"/>
            </columns>
        </TableView>
    </GridPane>
</VBox>