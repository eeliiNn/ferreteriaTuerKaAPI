<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ferreteriatuerka.controller.ProveedorController"
      stylesheets="@Styles/login.css">
    <GridPane styleClass="content"
              hgap="10" vgap="10" alignment="CENTER">
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTelefono" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Dirección:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtDireccion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
            <Button text="Cargar" onAction="#cargarProveedores"/>
            <Button text="Guardar" onAction="#guardarProveedor"/>
            <Button text="Eliminar" onAction="#eliminarProveedor"/>
            <Button text="Volver" onAction="#VolverMenu"/>
        </HBox>

        <TableView fx:id="tblProveedores" prefHeight="260" prefWidth="520"
                   GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2">

            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120"/>
                <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="140"/>
                <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="140"/>
            </columns>

        </TableView>


    </GridPane>

</VBox>
